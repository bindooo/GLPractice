<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.faveoffate.glpractice">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="Cannon Test"
            android:name=".CannonTest"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation" >
        </activity>
        <activity android:label="Cannon Gravity Test"
            android:name=".CannonGravityTest"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation" >
        </activity>
        <activity android:label="Collision Test"
            android:name=".CollisionTest"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation" >
        </activity>
        <activity android:label="Camera 2D Test"
            android:name=".Camera2DTest"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation" >
        </activity>
        <activity android:label="Texture Atlas Test"
            android:name=".TextureAtlasTest"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation" >
        </activity>
        <activity android:label="Sprite Batcher Test"
            android:name=".SpriteBatcherTest"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation" >
        </activity>
        <activity android:label="Animation Test"
            android:name=".AnimationTest"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation" >
        </activity>
    </application>
</manifest>
